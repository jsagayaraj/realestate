{% extends "base.html.twig" %}
{% block title  'Registration'%}
  {% block stylesheets %}
    <style>
      .form-check {
        position: relative;
        display: inline-block;
        padding-left: 1.25rem;
      }

      .form-check:last-child {
        padding-left: 5rem;
      }
    </style>

  {% endblock %}
  {% block body %}
    {{ include("include/menu.html.twig") }}
    <div class="container">
      <h1>User Info</h1>
      {{form_start(form)}}
      <div class="row">
        <div class="col-md-6">
          {{form_row(form.firstname)}}
        </div>
        <div class="col-md-6">
          {{form_row(form.lastname)}}
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
          {{form_row(form.status)}}
        </div>
        <div class="col-md-6">
          {{form_row(form.roles)}}
        </div>
      </div>
      <button class="btn btn-primary" type="submit">Modifier</button>
      {{form_end(form)}}
    </div>
  {% endblock %}
