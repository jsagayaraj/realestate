{% extends "base.html.twig" %}
{% block title 'User List'%}
  {% block body %}
    <div class="container">
      {% for message in app.flashes('success') %}
        <div class="alert alert-success">
          {{message}}</div>
      {% endfor %}
      <h1>Properties ({{property | length()}})</h1>
        {{form_start(form)}}
        <div class="row">
          <div class="col-md-4">
            {{form_row(form.title)}}</div>
          <div class="col-md-4">
            {{form_row(form.rooms)}}</div>
          <div class="col-md-4">
            {{form_row(form.floor)}}</div>
        </div>

        <div class="row">
          <div class="col-md-4">
            {{form_row(form.surface)}}</div>
          <div class="col-md-4">
            {{form_row(form.price)}}</div>
          <div class="col-md-4">
            {{form_row(form.city)}}</div>
        </div>

        <div class="row">
          <div class="col-md-4">
            {{form_row(form.parking)}}</div>
          <div class="col-md-4">
            {{form_row(form.bathrooms)}}</div>
          <div class="col-md-4">
            {{form_row(form.city)}}</div>
        </div>

        <div class="row">
          <div class="col-md-4">
            {{form_row(form.address)}}</div>
          <div class="col-md-4">
            {{form_row(form.postalCode)}}</div>
          <div class="col-md-4">
            {{form_row(form.description)}}</div>
        </div>
        {{form_widget(form)}}
        <button class="btn btn-primary" type="submit">
          {{button|default('Entegistrer')}}</button>
        {{form_end(form)}}

    </div>
  {% endblock %}
    