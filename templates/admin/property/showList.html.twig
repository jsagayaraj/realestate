{% extends "base.html.twig" %}
{% block title 'User List'%}
  {% block body %}
    <div class="container">
      {% for message in app.flashes('success') %}
        <div class="alert alert-success">
          {{message}}</div>
      {% endfor %}
      <h1>Properties ({{properties | length()}})</h1>
      <table class="table  table-striped">
        <thead>
          <tr>
            <td>Id</td>
            <td>Title</td>
            <td>Description</td>
            <td>Photo</td>
            <td>Chambres</td>
            <td>Salle de Bains</td>
            <td>Etege</td>
            <td>Surface</td>
            <td>Prix</td>
            <td>Creation Date</td>
            <td>Vendu</td>
            <td>Ville</td>
            <td>Adresse</td>
            <td>code postal</td>
            <td>Pariking</td>
            <td>Actions</td>
          </tr>
        </thead>
        <tbody>
          {% set id = 0 %}
          {% for property in properties %}
            {% set id = id+1 %}
            <tr>
              <td>{{id}}</td>
              <td>{{property.title}}</td>
              <td>{{property.description}}</td>
              <td>{{property.image}}</td>
              <td>{{property.rooms}}</td>
              <td>{{property.bathrooms}}</td>
              <td>{{property.floor}}</td>
              <td>{{property.heat}}</td>
              <td>{{property.surface}}</td>
              <td>{{property.formatedPrice()}}</td>
              {# <td>{{property.createdAt}}</td> #}
              <td>{{property.sold}}</td>
              <td>{{property.city}}</td>
              <td>{{property.address}}</td>
              <td>{{property.postalCode}}</td>
              <td>{{property.parking}}</td>
              <td>
                <a class="text-primary" href="" style="display:inline-block; font-weight:bold;">Edit</a> || 
                {# Pour delete #}
                  <form method="post" action="{{path('admin_property_delete', {'id':property.id})}}" style="display:inline-block;"> <input name="_method" type="hidden" value="DELETE">
                    <input type="hidden" name="_token" value="{{csrf_token('delete' ~ property.id)}}">
                      <button class="btn btn-danger" onclick="return confirm('Etes vous vraiment sÃ»r?')" type="submit">Delete</button>
                    </form>
                  </td>
                </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>
      {% endblock %}
    