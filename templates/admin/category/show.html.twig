{% extends "base.html.twig" %}
{% block title 'User List'%}
  {% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                {% for message in app.flashes('success') %}
        <div class="alert alert-success">
          {{message}}</div>
      {% endfor %}
      <h1>Categories ({{categories|length()}})</h1>
      <div class="text-right"><a href="{{path('admin_add_category')}}" class="btn btn-success">Add New Category</a></div>
      <table class="table  table-striped">
        <thead>
          <tr>
            <td>Id</td>
            <td>Title</td>
            <td>Actions</td>
          </tr>
        </thead>
        <tbody>
          {% set id = 0 %}
          {% for category in categories %}
            {% set id = id+1 %}
            <tr>
              <td>{{id}}</td>
              <td>{{category.title}}</td>
             
              <td>
                <a class="text-primary btn btn-warning" href="{{path('admin_edit_cat', {'id':category.id})}}" style="display:inline-block; font-weight:bold;">Edit</a> || 
                {# Pour delete #}
                  <form method="post" action="{{path('admin_cat_delete', {'id':category.id})}}" style="display:inline-block;"> <input name="_method" type="hidden" value="DELETE">
                    <input type="hidden" name="_token" value="{{csrf_token('delete' ~ category.id)}}">
                      <button class="btn btn-danger" onclick="return confirm('Etes vous vraiment sÃ»r?')" type="submit">Delete</button>
                    </form>
                  </td>
                </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>
            </div>
        </div> {#end-container #}
      
      {% endblock %}
    