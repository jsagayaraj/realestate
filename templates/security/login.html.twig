<section>
 <div class="container">
   <div class="col-md-6 offset-md-3 section-b2">
    <div class="row">
      <div class="card">
        <div class="card-body">
          <h5 class="card-titile">Se connecter</h5>
            <p class="card-text">Vous n'avez pas encore de compte ? <a href="{{path('registration')}}">Créer un compre</a></p>
            
            <form action="{{ path('login') }}" class="form-a contactForm" method="post" role="form">
            {# <div id="sendmessage">Your message has been sent. Thank you!</div>
            <div id="errormessage"></div> #}
            <div class="row">
              <div class="col-md-12 mb-3">
              <div class="form-group">
                <input class="form-control form-control-lg form-control-a" data-msg="Please enter a valid email" data-rule="email" id="email" name="_email" placeholder="Email" type="email">

                <div class="validation"></div>
              </div>
              </div>
              
              <div class="col-md-12 mb-3">
              <div class="form-group">
                <input class="form-control form-control-lg form-control-a" data-msg="Please enter at least 8 chars of subject" data-rule="minlen:4" name="_password" id="password" placeholder="Password" type="password">
                <div class="validation"></div>
              </div>
              </div>

              <div class="col-md-12 mb-3">
                <div class="form-check d-flex justify-content-between">
                  <label class="form-check-label" for="exampleCheck1">
                    <input class="form-check-input" id="exampleCheck1" name="_remember_me" type="checkbox">Restez connecté(e)
                  </label>          
                  <p><a href="#">Mot de passe oublié?</a></p>
                </div>
              </div>

              <div class="col-md-12">          
                <button class="btn btn-a" type="submit">Se connecter</button>
              </div>
            </div>
              <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
              <input type="hidden" name="_target_path" value="{{ app.request.get('redirect_to') }}">


            </form>
        </div>
      </div> 
    </div>
   </div>
  </div>
</section>


