{% extends "base.html.twig" %}
{% block title  'Registration'%}
  {% block body %}

    {{ include("include/menu.html.twig") }}

  <div class="container">
    <div class="row">
      {# ERROR OR SUCCESS MESSAGE #}
        {% for message in app.flashes('success') %}
          <div class="alert alert-success">
            {{message}}</div>
        {% endfor %}
        <h1>Connexion</h1>
        <form action="{{path('security_login')}}" method="post">
          <div class="form-group">
            <input type="text" name="_username" class="form-control" placeholder="Adresse email ..." required>
          </div>

          <div class="form-group">
            <input type="password" name="_password" class="form-control" placeholder="Mod de passe ..." required>
          </div>

          <div class="form-group">
            <button type="submit" class="btn btn-primary">Se Connecter</button>
          </div>
        </form
    
    </div>
  
  </div>

  {% endblock %}
    