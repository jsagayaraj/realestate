            <input class="form-check-input" id="exampleCheck1" type="checkbox">Mr.
            </label>      
          </div> #}
        </div>
        </div>

        <div class="row">
          <div class="col-md-6 mb-3">
            <div class="form-group">
              <label for="">Prenom</label>
              {# <input class="form-control form-control-a" data-msg="Please enter a valid email" data-rule="email" name="email"  type="text"> #}
              {{form_widget(form.firstname, {attr:{'class':'form-control form-control-a'}})}}
              <div class="invalid-feedback">
              {{form_errors(form.firstname)}}

              </div>
            </div>
          </div>
          <div class="col-md-6 mb-3">
          <div class="form-group">
            <label for="">Nom</label>
            {# <input class="form-control form-control-a" data-msg="Please enter a valid email" data-rule="email" name="email"  type="text"> #}
{{form_widget(form.lastname, {attr:{'class':'form-control form-control-a'}})}}

            <div class="validation"></div>
          </div>
          </div>
          </div>

          <div class="row">
            <div class="col-md-6 mb-3">
              <div class="form-group">
              <label for="">Email</label>
              {# <input class="form-control form-control-a" data-msg="Please enter a valid email" data-rule="email" name="email" type="email"> #}
{{form_widget(form.email, {attr:{'class':'form-control form-control-a'}})}}

              <div class="validation"></div>
              </div>
            </div>
            <div class="col-md-6 mb-3">
              <div class="form-group">
              <label for="">Télephone Number</label>
              {# <input class="form-control form-control-a" data-msg="Please enter a valid email" data-rule="email" name="email" type="text"> #}
{{form_widget(form.phoneNumber, {attr:{'class':'form-control form-control-a'}})}}

              <div class="validation"></div>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-md-6 mb-3">
              <div class="form-group">
              <label for="">Mot de passe</label>
              {# <input class="form-control form-control-a" data-msg="Please enter a valid email" data-rule="email" type="password"> #}
{{form_widget(form.password.first, {attr:{'class':'form-control form-control-a'}})}}

              <div class="validation"></div>
              </div>
            </div>
            <div class="col-md-6 mb-3">
              <div class="form-group">
              <label for="">Confirm Mot de passe</label>
              {# <input class="form-control form-control-a" data-msg="Please enter a valid email" data-rule="email"  type="password"> #}
{{form_widget(form.password.second, {attr:{'class':'form-control form-control-a'}})}}

              <div class="validation"></div>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-md-6 mb-3">
              <div class="form-group">
              <label>Ville</label>
              {# <input class="form-control form-control-a" data-msg="Please enter a valid email" data-rule="email"  type="text"> #}
{{form_widget(form.city, {attr:{'class':'form-control form-control-a'}})}}

              <div class="validation"></div>
              </div>
            </div>
            <div class="col-md-6 mb-3">
              <div class="form-group">
              <label for="">Code postal</label>
              {# <input class="form-control form-control-a" data-msg="Please enter a valid email" data-rule="email" type="text"> #}
{{form_widget(form.postalCode, {attr:{'class':'form-control form-control-a'}})}}

              <div class="validation"></div>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-md-12 mb-3">
              <div class="form-group">
                <label>Adresse</label>
                {# <textarea  class="form-control" id="" ></textarea> #}
{{form_widget(form.address, {attr:{'class':'form-control form-control-a'}})}}

              <div class="validation"></div>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-md-12">
              <button class="btn btn-a" type="submit">Créer un compte</button>
            </div>
          </div>

        </div>
      {{form_end(form)}}
        {# </form> #}
      </div>
      </div>
    </div>
    </div>
</section>
