{% extends "base.html.twig" %}
{% block title  'Registration'%}
  {% block stylesheets %}
      <style>
          .form-check {
              position: relative;
              display: inline-block;
              padding-left: 1.25rem;
          }

          .form-check:last-child{
              padding-left: 5rem;
          }
      </style>
        
  {% endblock %}
  {% block body %}
    {{ include("include/menu.html.twig") }}
    <div class="container">
      <h1>Registration</h1>
      {{form_start(form)}}
      <div class="row">
          
          {{form_row(form.gender)}}
        
        <div class="col-md-6">
          {{form_row(form.firstname, 
                {
                    'label': 'Prenom', 
                    attr:
                    {
                        'placeholder': 'Entre Votre Nom'
                    }
                }
                )}}
        </div>
        <div class="col-md-6">
          {{form_row(form.lastname)}}
        </div>
      </div>

      <div class="row">
        <div class="col-md-6">
          {{form_row(form.email)}}
        </div>
        <div class="col-md-6">
          {{form_row(form.phoneNumber)}}
        </div>
      </div>

      <div class="row">
        <div class="col-md-6">
          {{form_row(form.password)}}
        </div>
        <div class="col-md-6">
          {{form_row(form.confirmPassword)}}
        </div>
      </div>


      <div class="row">
        <div class="col-md-6">
          {{form_row(form.city)}}
        </div> 
        <div class="col-md-6">
          {{form_row(form.postalCode)}}
        </div>
      </div>

      <div class="row">
        <div class="col-md-6">
          {{form_row(form.address)}}
        </div>
      </div>
      <button class="btn btn-primary" type="submit">Enregistrer</button>
      {{form_end(form)}}
    </div>
  {% endblock %}
