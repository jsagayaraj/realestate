{% extends "base.html.twig" %}

{% block title property.title %}

    {% block body %}
        {% include "include/menu.html.twig" %}
        <div class="container mt-4">
            <div class="row">
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success">
                        {{message}}
                    </div>
                {% endfor %}

                <div class="col-md-8">
                    <img src="{{vich_uploader_asset(property, 'imageFile')}}" class="img-responsive" alt="">


                </div>

                <div class="col-md-4">
                    <h1>{{property.title}}</h1>
                    <h2>{{property.rooms}}
                        pièces -
                        {{property.surface}}
                        m²</h2>
                    <div class="text-primary" style="font-size:4rem; font-weight:bold;">{{property.formatedPrice}}
                        €</div>
                    <a class="btn btn-primary" href="">Contacter l'agence</a>
                    <div class="mt-4" id="contactForm">
                        {{form_start(form)}}
                        <div class="row">
                            <div class="col-md-6">{{form_row(form.firstname)}}</div>
                            <div class="col-md-6">{{form_row(form.lastname)}}</div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">{{form_row(form.phone)}}</div>
                            <div class="col-md-6">{{form_row(form.email)}}</div>
                        </div>
                        {{form_rest(form)}}
                        <div class="form-froup">
                            <button class="btn btn-primary">Envoyer</button>
                        </div>
                        {{form_end(form)}}

                    </div>
                </div>
            </div>

            <p>{{property.description | nl2br}}</p>
            <div class="row">
                <div class="col-md-8">
                    <h2>Carectéristiques</h2>
                    <table class="table table-striped">
                        <tr>
                            <td>Surface habitable</td>
                            <td>{{ property.surface }}
                                m²</td>
                        </tr>
                        <tr>
                            <td>Pièces</td>
                            <td>{{ property.rooms }}</td>
                        </tr>
                        <tr>
                            <td>Chambres</td>
                            <td>{{ property.rooms -1}}</td>
                        </tr>
                        <tr>
                            <td>Salle de Bain</td>
                            <td>{{ property.bathrooms }}</td>
                        </tr>


                        <tr>
                            <td>Etage</td>
                            {% if property.floor == 0 %}
                                <td>Rez de Chaussé
                                </td>
                            {% else %}
                                <td>{{property.floor}}
                                </td>

                            {% endif %}


                        </tr>
                        <tr>
                            <td>Chauffage</td>
                            <td>{{ property.heat }}</td>
                        </tr>
                        <tr>
                            <td>Parking</td>
                            <td>{{ property.parking }}</td>
                        </tr>


                    </table>
                </div>
                <div class="col-md-4"></div>
            </div>

        </div>
    {% endblock %}
